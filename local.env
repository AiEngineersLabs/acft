# LLM (Ollama)
ACFT_LLM_BACKEND=ollama
ACFT_LLAMA_MODEL=llama3.2:latest
ACFT_LLAMA_BASE_URL=http://localhost:11434

# Embeddings (Ollama)
ACFT_EMBED_BACKEND=ollama
ACFT_EMBED_MODEL=nomic-embed-text
ACFT_EMBED_BASE_URL=http://localhost:11434

# Switch to non-Ollama backends by uncommenting below and commenting out above
# ACFT_LLM_BACKEND=vllm
# ACFT_LLAMA_BASE_URL=http://localhost:8000/v1
# ACFT_LLAMA_MODEL=gpt-4o-mini  # or your vLLM model name

# ACFT_EMBED_BACKEND=hf
# ACFT_EMBED_BASE_URL=http://localhost:8000/v1
# ACFT_EMBED_MODEL=text-embedding-3-small
# OPENAI_API_KEY=...   # or VLLM_API_KEY / HF_API_TOKEN

# ===== Stability thresholds =====
ACFT_EMIT_MIN_STABILITY=0.5
ACFT_REGEN_MIN_STABILITY=0.3
ACFT_RETRIEVE_MIN_STABILITY=0.1

# ===== Retrieval & security =====
ACFT_USE_RETRIEVAL=true
ACFT_RAG_FOLDER=rag_corpus
ACFT_SECURITY_MODE=true
ACFT_SECURITY_POLICY_FILE_ENABLE=true

# ===== PDE & topology =====
ACFT_PDE_ENABLED=true
ACFT_PDE_DIFFUSION=0.1
ACFT_PDE_DT=0.05
ACFT_PDE_STEPS=5
ACFT_TOPOLOGY_ENABLED=true